{
  "name": "fhir-sandbox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx src/server/index.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.node.json",
    "build:client": "tsc --project tsconfig.app.json --noEmit && vite build",
    "preview": "vite preview",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\"",
    "test": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.5",
    "hono": "^4.6.5",
    "oidc-provider": "^9.5.1",
    "pino": "^9.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/oidc-provider": "^9.5.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vitest": "^2.1.4"
  }
}
